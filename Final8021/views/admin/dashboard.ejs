<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Dee's Restaurant</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Navbar styling */
        .navbar {
            background-color: #333;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            padding: 10px 20px;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 14px 20px;
            text-align: center;
        }

        .navbar a:hover {
            background-color: #575757;
            border-radius: 5px;
        }

        .dashboard-container {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <div>
            <a href="/admin/dashboard">Orders</a>
            <a href="/admin/login">Login</a>
        </div>
        <a href="/admin/logout">Logout</a>
    </div>

    <!-- Dashboard Content -->
    <div class="dashboard-container">
        <h2>Admin Dashboard</h2>

        <h3>Orders</h3>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Pizza</th>
                    <th>Pasta</th>
                    <th>Wings</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.name %></td>
                        <td><%= order.phone %></td>
                        <td><%= order.pizza %></td>
                        <td><%= order.pasta %></td>
                        <td><%= order.wings %></td>
                        <td>
                            $<%= (order.pizza * 15.99 + order.pasta * 20.99 + order.wings * 10.49).toFixed(2) %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
