    color: #28a745;
}

p {
    font-size: 18px;
    color: #555;
}

button {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 15px 30px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 20px;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #218838;
}

footer {
    margin-top: 30px;
    font-size: 14px;
    color: #777;
